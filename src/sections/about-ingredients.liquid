<section class="fl-fix bg-white ov-h about-layout">
    <div class="full-wrapper">
        <ul class="fl-fix ingredient-slider">
            {% for block in section.blocks %}
                {% if block.settings.featured_ingredients == false %}
                    {% continue %}
                {% endif %}
                <li class="item fl-fix">
                    <div class="d-tb tbl-f w100">
                        <div class="img-box d-tbc w50 ov-h va-m pos-r">
                            <figure class="bgsz-cv pos-a bgp-cc" style="background-image: url('{{ block.settings.ingredients_image | img_url: 'master' }}');">
                                <img src="{{ 'about-layout-placeholder.gif' | asset_url }}" alt="about-layout-placeholder" class="w100"> 
                            </figure>
                        </div>
                        <div class="d-tbc w50 va-m pos-r">
                            <div class="center-maker">
                                <div class="wrapper">
                                    <div class="text-box">
                                        {% if section.settings.ingredients != blank %}
                                            <div class="title-box fl-fix">
                                                <h3 class="h5">{{ section.settings.ingredients }}</h3>
                                            </div>
                                        {% endif %}
                                        <div class="info-box fl-fix">
                                            {% if block.settings.ingredients_title != blank %}
                                                <p><strong>{{ block.settings.ingredients_title }}</strong></p>
                                            {% endif %}
                                            {% if block.settings.ingredients_details != blank %}
                                                {{ block.settings.ingredients_details }}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>
<section class="fl-fix glossary">
