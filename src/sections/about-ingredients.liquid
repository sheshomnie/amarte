{% schema %} 
  {
    "name": {
      "en": "Ingredients"
    },
    "settings": [
      {
        "type": "text",
        "id": "ingredients",
        "label": "Heading",
        "default": "Ingredients" 
      },
      {
        "type": "text",
        "id": "ingredients_glossary",
        "label": "Heading",
        "default": "INGREDIENTS GLOSSARY" 
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Ingredients",
        "settings": [
            {
                "type": "text",
                "id": "ingredients_title",
                "label": "Ingredients Title",
                "default": "Add a title of Ingredients"
            },
            {
                "type": "image_picker",
                "id": "ingredients_image",
                "label": "Ingredients Image"
            },          
            {
                "type": "richtext",
                "id": "ingredients_details",
                "label": "Ingredients Details",
                "default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
            },
            {
              "type": "checkbox",
              "id": "featured_ingredients",
              "label": "Show As Featured Ingredients",
              "default": false
            },
            {
              "type": "textarea",
              "id": "ingredient_tags",
              "label": "Tags",
              "info": "Place your tags(comma separated)!",
              "placeholder": "Tags"
           }
        ]
      }
    ]
  }
{% endschema %}