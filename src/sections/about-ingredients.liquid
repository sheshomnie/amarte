                </ul>
            </div>
            <div class="fl-fix glossary-detail">
                <ul class="fl-fix index-list" data-type="index-a">
                    {% for block in section.blocks %}
                        {% if block.settings.featured_ingredients %}
                            {% continue %}
                        {% endif %}
                        <li class="item">
                            {% if block.settings.ingredients_title != blank %}
                                <div class="title ingredient-heading">
                                    <strong>{{ block.settings.ingredients_title }}</strong>
                                </div>
                            {% endif %}
                            {% if block.settings.ingredients_details != blank %}
                                <div class="short-info">
                                    {{ block.settings.ingredients_details }}
                                </div>
                            {% endif %}                            
