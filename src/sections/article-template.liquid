<section class="fl-fix pos-r home-banner">
    <div class="fl-fix top-banner blog-detail-banner">
        <figure class="bgsz-cv" style="background-image:url({{ section.settings.blod_details_banner | img_url:'master' }});">
            <img src="{{ section.settings.blod_details_banner | img_url:'master' }}" alt="" class="bgsz-cv-img">
            <figcaption class="caption pos-a">
                <div class="wrapper">
                    <div class="text-box ta-c">
                        <h1 class="h2 title d-ib tt-u">
                            {{ article.excerpt }}
                        </h1>
                        <div class="short-info c-white">
                            <p>{{ article.published_at | time_tag: '%d.%m.%Y' }}</p>
                        </div>
                    </div>
                    <div class="back-btn">
                        <a href="/pages/blog" class="btn border transparent"><span>{{ 'blogs.article.back_to_blogs' | t }}</span></a>
                    </div>
                </div>
            </figcaption>
        </figure>
    </div>
</section>

<section class="fl-fix bg-white ov-h feature-layout blog-section">
    <div class="full-wrapper">
        <div class="fl-fix">
            <div class="title-box fl-fix">
                <h3 class="h5 title">{{ article.title }}</h3>
            </div>
            <div class="d-tb tbl-f w100 item">
                {{ article.content }}
            </div>
        </div>
    </div>
</section>

<section class="fl-fix share-vogue">
    <div class="small-wrapper">
        <div class="d-b w100 social">
            <h4 class="title">share</h4>
            <ul class="icons clear-fix">
                <li class="fb">
                    <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: article.url }}"><span>Facebook</span></a>
                </li>
                <li class="tw">
                    <a href="//twitter.com/share?text={{ article.title | url_param_escape }}&amp;url={{ shop.url | append: article.url }}"><span>Twitter</span></a>
                </li>
                <li class="pi">
                    <a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: article.url }}&amp;media={{ article.image | img_url: '1024x1024' }}&amp;description={{ article.title | url_param_escape }}"><span>P Interest</span></a>
                </li>
            </ul>
            <div class="fl-fix">
                <strong class="d-b vogue-text">{{ article.image.alt }}</strong>
            </div>
        </div>
    </div>
</section>

